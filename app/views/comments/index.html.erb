<p class="alert alert-success"><%= notice %></p>

<% content_for :title, "Comments" %>

<h1>Commentarios</h1>

<div class="row">
  <% @comments.each do |comment| %>
  <div class="card my-2">
      <div class="card-body">
        <h5 class="card-title"><%= comment.user.name %></h5>
        <p class="card-text"><%= truncate(comment.content, length: 100) %></p> 
        <%= link_to "Ver este post", comment_path(comment), class: "btn btn-primary btn-sm" %>
      </div>
  </div>
  <% end %>
</div>

<%= link_to "Nuevo comentario", new_comment_path, class: "btn btn-primary" %>