<h2 class="my-5 text-center">Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "w-50 mx-auto" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group mb-3">
    <%= f.label :name, "Nombre", class: "form-label" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "nombre", class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :email, "Correo Electrónico", class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="alert alert-info">
      Actualmente esperando confirmación para: <%= resource.unconfirmed_email %>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= f.label :password, "Nueva Contraseña (dejar en blanco si no quieres cambiarla)", class: "form-label" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted">
        <%= @minimum_password_length %> caracteres como mínimo.
      </small>
    <% end %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password_confirmation, "Confirmar Nueva Contraseña", class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :current_password, "Contraseña Actual (necesaria para confirmar los cambios)", class: "form-label" %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="d-grid">
    <%= f.submit "Actualizar", class: "btn btn-dark btn-block" %>
  </div>
<% end %>

<div class="text-center">
  <p>¿No estás satisfecho? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?", turbo_confirm: "¿Estás seguro?" }, method: :delete, class: "btn btn-outline-danger mt-3" %></p>
</div>

<div class="text-center mb-2">
  <%= link_to "Volver", :back, class: "btn btn-secondary" %>
</div>
